@model IEnumerable<WeatherZoneApp.Models.City>

@{
    ViewData["Title"] = "City Management";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>City Management</h1>
        <div class="d-flex gap-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                <i class="bi bi-grid"></i> View Cities
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Add New City
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Country</th>
                            <th>Population</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var city in Model)
                        {
                            <tr>
                                <td>@city.Name</td>
                                <td>@city.Country</td>
                                <td>@city.Population.ToString("N1") M</td>
                                <td>
                                    <span class="badge bg-@(city.IsEnabled ? "success" : "warning")">
                                        @(city.IsEnabled ? "Active" : "Disabled")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@city.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <form asp-action="ToggleStatus" asp-route-id="@city.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-@(city.IsEnabled ? "warning" : "success")">
                                                <i class="bi bi-@(city.IsEnabled ? "pause" : "play")"></i>
                                                @(city.IsEnabled ? "Disable" : "Enable")
                                            </button>
                                        </form>
                                        <form asp-action="Delete" asp-route-id="@city.Id" method="post" class="d-inline" 
                                              onsubmit="return confirm('Are you sure you want to delete @city.Name?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table {
            color: var(--bs-body-color);
        }
        .card {
            background-color: var(--card-bg);
            border-color: var(--card-border);
        }
        .btn-group .btn {
            margin: 0 2px;
        }
        .badge {
            padding: 0.5em 0.75em;
        }
    </style>
}
